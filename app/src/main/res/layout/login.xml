<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantbg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/back2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:background="@drawable/sheet_back"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="243dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:text="Welcome Back"
                    android:textColor="#40744D"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Login to your account"
                    android:textColor="#535252"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/leaf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_item"
                android:backgroundTint="#D5E8CE"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/username" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Email"
                    android:background="@android:color/transparent"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_item"
                android:backgroundTint="#D5E8CE"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/password" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordTIL"
                    app:passwordToggleEnabled="true">
                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="Password"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:imeActionLabel="Sign in"
                        android:imeOptions="actionDone"
                        android:selectAllOnFocus="true"/>


                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#40744D"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="10dp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:backgroundTint="#40744D"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="75dp"
                android:background="@drawable/btn_login"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Don't have an acount?"
                    android:textColor="#716F6F"
                    android:textSize="@dimen/_13sdp" />
                <TextView
                    android:id="@+id/btn_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="#40744D"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18sdp"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>